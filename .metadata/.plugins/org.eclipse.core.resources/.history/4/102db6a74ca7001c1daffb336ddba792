package date;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.time.LocalDate;
import java.util.Date;

public class date_formate {
	public static void main(String[] args) {
		String fulldate = "2022-03-19 11:32";
		String date = "2022-03-19";
		Date date = null;
		LocalDate dateDMY = null;
		try {
			date = new SimpleDateFormat("yyyy-MM-dd hh:mm").parse(fulldate);
			System.out.println(date);
			System.out.println(new SimpleDateFormat("hh:mm aa").format(date));

			LocalDate currentDate = LocalDate.parse(date);
			System.out.println(currentDate.getDayOfMonth());
		} catch (ParseException e) {
			System.out.println("Error");
			e.printStackTrace();
		}
	}
}
